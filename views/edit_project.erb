<h2>Update "<%= @project.title() %>" project</h1>
<form action="/tracker/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_title">Rename Project</label>
  <input name="new_title" type="text">
  <button type="submit" class="btn btn-warning">Update Project</button>
</form>

<form action="/tracker/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete Project</button>
</form>
<br>
<p><a href="/tracker/projects">Return to list of projects</a></p>