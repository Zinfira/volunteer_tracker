<% if @projects.any? %>

<h3>List of projects</h3>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/tracker/projects/<%=project.id%>"><%=project.title%></a></li>
  <% end %>
</ul>
<% else %>
<h3>No projects yet.</h3>
<% end %>
<br>
<h3>Create a new project</h3>
<form action="/tracker/projects" method="post">
  <div class="form-group">
    <label for="new_project">Enter a Project</label>
    <input type="text" name="new_project">
  </div>
  <button type="submit" class="btn btn-success">Add a new Project</button>
</form>

