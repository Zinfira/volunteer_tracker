<h2>Volunteer: <%= @volunteer.name %> </h2>

<form action="/tracker/projects/<%= @project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <label>Update volunteer name:</label>
  <input name="_method" type="hidden" value="patch">
  <input type="text" name="name">
  <button type="submit" class="btn btn-warning">Update Volunteer</button>
</form>

<form action="/tracker/projects/<%= @project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Volunteer</button>
</form>
<br>
<p><a href="/tracker/projects/<%= @project.id %>">Return to project</a></p>